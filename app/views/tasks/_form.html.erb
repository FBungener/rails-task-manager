<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :done %>
  <%= f.text_field :done %>

  <%= f.label :priority_level %>
  <%= f.text_field :priority_level %>

  <%= f.submit %>
<% end %>
